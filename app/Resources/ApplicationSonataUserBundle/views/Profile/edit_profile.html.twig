{% extends "ApplicationSonataUserBundle:Profile:action.html.twig" %}

{% block sonata_profile_title %}
    {{ "title_user_account" | trans({}, 'SonataUserBundle')}} - {{ "title_user_edit_profile" | trans({}, 'SonataUserBundle')}}
{% endblock %}

{% block sonata_profile_content %}

    {% if form_errors(form) %}
        <div class="alert alert-danger alert-error">
            {{ form_errors(form) }}
        </div>
    {% endif %}

    {% form_theme form _self %}
    <div class="row">
        <div class="span6 col-lg-6">
            <div class="panel panel-md5">
                <div class="panel-heading">
                    <h3 class="panel-title"><b>{{ "title_user_account" | trans({}, 'SonataUserBundle')}}</b></h3>
                </div>
                <div class="panel-body">
                    <form action="{{ path('sonata_user_profile_edit') }}" method="POST" class="form-horizontal">
                        <br/>
                        <div class="form-group">
                            {% if form_errors(form.lastname) %}
                                <div class="alert alert-danger alert-error">
                                    {{ form_errors(form.lastname) }}
                                </div>
                            {% endif %}
                            <div class="row">
                                <div class="col-md-1">
                                </div>
                                <div class="col-md-4">
                                    {{ form_label(form.lastname) }}
                                </div>
                                <div class="col-md-7">
                                    {{ form_widget(form.lastname) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            {% if form_errors(form.firstname) %}
                                <div class="alert alert-danger alert-error">
                                    {{ form_errors(form.firstname) }}
                                </div>
                            {% endif %}
                            <div class="row">
                                <div class="col-md-1">
                                </div>
                                <div class="col-md-4">
                                    {{ form_label(form.firstname) }}
                                </div>
                                <div class="col-md-7">
                                    {{ form_widget(form.firstname) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            {% if form_errors(form.phoneNumber) %}
                                <div class="alert alert-danger alert-error">
                                    {{ form_errors(form.phoneNumber) }}
                                </div>
                            {% endif %}
                            <div class="row">
                                <div class="col-md-1">
                                </div>
                                <div class="col-md-4">
                                    {{ form_label(form.phoneNumber) }}
                                </div>
                                <div class="col-md-7">
                                    {{ form_widget(form.phoneNumber) }}
                                </div>
                            </div>
                        </div>

                        <hr/>

                        <div class="form-group">
                            {% if form_errors(form.company) %}
                                <div class="alert alert-danger alert-error">
                                    {{ form_errors(form.company) }}
                                </div>
                            {% endif %}
                            <div class="row">
                                <div class="col-md-1">
                                </div>
                                <div class="col-md-4">
                                    {{ form_label(form.company) }}
                                </div>
                                <div class="col-md-7">
                                    {{ form_widget(form.company) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            {% if form_errors(form.legalSituation) %}
                                <div class="alert alert-danger alert-error">
                                    {{ form_errors(form.legalSituation) }}
                                </div>
                            {% endif %}
                            <div class="row">
                                <div class="col-md-1">
                                </div>
                                <div class="col-md-4">
                                    {{ form_label(form.legalSituation) }}
                                </div>
                                <div class="col-md-7">
                                    {{ form_widget(form.legalSituation) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            {% if form_errors(form.url) %}
                                <div class="alert alert-danger alert-error">
                                    {{ form_errors(form.url) }}
                                </div>
                            {% endif %}
                            <div class="row">
                                <div class="col-md-1">
                                </div>
                                <div class="col-md-4">
                                    {{ form_label(form.url) }}
                                </div>
                                <div class="col-md-7">
                                    {{ form_widget(form.url) }}
                                </div>
                            </div>
                        </div>
                        <hr/>
                        {{ form_row(form._token) }}
                        <br/>
                        <div class="form-actions">
                            <button type="submit" name="submit"  class="btn btn-primary pull-right">{{ 'sonata_user_validate'|trans({}, 'SonataUserBundle') }}</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="span6 col-lg-6">
            {% render url("sonata_user_profile_edit_authentication") %}
        </div>
    </div>
{% endblock %}