{% extends "ApplicationSonataUserBundle:Profile:action.html.twig" %}

{% block sonata_profile_title %}
    {{ "title_user_account" | trans({}, 'SonataUserBundle')}} - {{ "title_user_edit_profile" | trans({}, 'SonataUserBundle')}}
{% endblock %}

{% block sonata_profile_content %}

    {% if form_errors(form) %}
        <div class="alert alert-danger alert-error">
            {{ form_errors(form) }}
        </div>
    {% endif %}

    {% form_theme form _self %}
    <div class="row">
        <div class="span6 col-lg-6">
            <div class="panel panel-md5">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ "title_user_account" | trans({}, 'SonataUserBundle')}}</h3>
                </div>
                <div class="panel-body">
                    <form action="{{ path('sonata_user_profile_edit') }}" method="POST" class="form-horizontal">

                        {{ form_row(form.lastname) }}
                        {{ form_row(form.firstname) }}
                        {{ form_row(form.phoneNumber) }}
                        <hr/>
                        {{ form_row(form.company) }}
                        {{ form_row(form.legalSituation) }}
                        {{ form_row(form.url) }}

                        {{ form_row(form._token) }}
                        <br/>
                        <div class="form-actions">
                            <button type="submit" name="submit"  class="btn btn-primary pull-right">{{ 'sonata_user_validate'|trans({}, 'SonataUserBundle') }}</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="span6 col-lg-6">
            {% render url("sonata_user_profile_edit_authentication") %}
        </div>
    </div>
{% endblock %}