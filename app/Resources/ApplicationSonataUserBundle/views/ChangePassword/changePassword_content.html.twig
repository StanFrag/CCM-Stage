<form action="{{ path('sonata_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
    <br/>
    <div class="form-group">
        {% if form_errors(form.current_password) %}
            <div class="alert alert-danger alert-error">
                {{ form_errors(form.current_password) }}
            </div>
        {% endif %}
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-4">
                {{ form_label(form.current_password) }}
            </div>
            <div class="col-md-7">
                {{ form_widget(form.current_password) }}
            </div>
        </div>
    </div>
    <div class="form-group">
        {% if form_errors(form.new.first) %}
            <div class="alert alert-danger alert-error">
                {{ form_errors(form.new.first) }}
            </div>
        {% endif %}
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-4">
                {{ form_label(form.new.first) }}
            </div>
            <div class="col-md-7">
                {{ form_widget(form.new.first) }}
            </div>
        </div>
    </div>
    <div class="form-group">
        {% if form_errors(form.new.second) %}
            <div class="alert alert-danger alert-error">
                {{ form_errors(form.new.second) }}
            </div>
        {% endif %}
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-4">
                {{ form_label(form.new.second) }}
            </div>
            <div class="col-md-7">
                {{ form_widget(form.new.second) }}
            </div>
        </div>
    </div>
    {{ form_rest(form) }}
    <br/>
    <button type="submit" class="btn btn-danger pull-right"><i class="icon-lock icon-white glyphicon glyphicon-lock"></i>&nbsp;{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}</button>
</form>
