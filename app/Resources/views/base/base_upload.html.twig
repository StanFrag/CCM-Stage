{% extends "ApplicationSonataUserBundle:Profile:action.html.twig" %}

{% block sonata_profile_title %}
    {{ "title_user_base" | trans({}, 'SonataUserBundle')}}
{% endblock %}

{% block sonata_profile_content %}

    {% form_theme form _self %}
        <div class="panel panel-md5">

            <div class="panel-heading">
                <h2 class="panel-title">{{ 'base_upload_form'|trans({}, 'SonataUserBundle') }}</h2>
            </div>

            <div class="panel-body">

                {% if form_errors(form) %}
                    <div class="alert alert-danger alert-error">
                        {{ form_errors(form) }}
                    </div>
                {% endif %}

                <form action="#" method="post" {{ form_enctype(form) }}>

                    <div class="form-group">
                        {% if form_errors(form.title) %}
                            <div class="alert alert-danger alert-error">
                                {{ form_errors(form.title) }}
                            </div>
                        {% endif %}
                        <div class="row">
                            <div class="col-md-2">
                                {{ form_label(form.title) }}
                            </div>
                            <div class="col-md-10">
                                {{ form_widget(form.title) }}
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        {% if form_errors(form.header) %}
                            <div class="alert alert-danger alert-error">
                                {{ form_errors(form.header) }}
                            </div>
                        {% endif %}
                        <div class="row">
                            <div class="col-md-2">
                                {{ form_label(form.header) }}
                            </div>
                            <div class="col-md-10">
                                {{ form_widget(form.header) }}
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        {% if form_errors(form.delimiter) %}
                            <div class="alert alert-danger alert-error">
                                {{ form_errors(form.delimiter) }}
                            </div>
                        {% endif %}
                        <div class="row">
                            <div class="col-md-2">
                                {{ form_label(form.delimiter) }}
                            </div>
                            <div class="col-md-10">
                                {{ form_widget(form.delimiter) }}
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        {% if form_errors(form.file) %}
                            <div class="alert alert-danger alert-error">
                                {{ form_errors(form.file) }}
                            </div>
                        {% endif %}
                        <div class="row">
                            <div class="col-md-2">
                                {{ form_label(form.file) }}
                            </div>
                            <div class="col-md-10">
                                {{ form_widget(form.file) }}
                            </div>
                        </div>
                    </div>

                    {{ form_rest(form) }}

                    <input type="submit" class="btn btn-success" value="{{ 'base_submit'|trans({}, 'SonataUserBundle') }}" />
                </form>

            </div>
        </div>
{% endblock %}